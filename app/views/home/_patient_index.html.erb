<% if appointments.present? %>
 <table>
  <thead>
    <tr>
      <th style='padding: 10px;'>Appointment Date</th>
      <th style='padding: 10px;'>Status</th>
      <th style='padding: 10px;'>Doctor Name</th>
      <th style='padding: 10px;'>Actions</th>
    </tr>
  </thead>
  <tbody >
    <% appointments.each do |appointment| %>
      <tr>
        <td style='padding: 10px;'><%= appointment.date %></td>
        <td style='padding: 10px;'><%= appointment.status %></td>
        <td style='padding: 10px;'><%= appointment.doctor.name %></td>
        <td style='padding: 10px;'><%= link_to  "show", appointment_path(appointment) %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
<% else%>
  No Record Found
<% end %>